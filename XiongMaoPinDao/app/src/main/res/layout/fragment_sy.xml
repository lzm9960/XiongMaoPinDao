<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lzm.jiyun.com.xiongmaopindao.fragment.SyFragment">

    <!-- TODO: Update blank fragment layout -->
<android.support.v4.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:id="@+id/swi"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6EBEF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.youth.banner.Banner
                    android:id="@+id/sy_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y450" />

                <TextView
                    android:id="@+id/sy_titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="sdasdasdasdasds"
                    android:textColor="#FFF" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:text="熊猫播报"
                    android:paddingLeft="5dp"
                    android:textColor="#4370AC" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y3"
                    android:background="#E6EBEF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sy_image2"
                        android:layout_width="@dimen/x300"
                        android:layout_height="@dimen/y300"
                        android:layout_margin="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sy_te_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textColor="#FF79A5" />

                            <TextView
                                android:id="@+id/sy_te2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y3"
                            android:background="#E6EBEF" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sy_te_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textColor="#FF79A5" />

                            <TextView
                                android:id="@+id/sy_te4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y15"
                    android:background="#E6EBEF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:gravity="center_vertical"
                    android:text="直播秀场"
                    android:paddingLeft="5dp"
                    android:background="#FFFFFF"
                    android:textColor="#4370AC" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y3"
                    android:background="#E6EBEF" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sy_recyXc"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"></android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y15"
                    android:background="#E6EBEF" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:gravity="center_vertical"
                    android:text="精彩一刻"
                    android:paddingLeft="5dp"
                    android:background="#FFFFFF"
                    android:textColor="#4370AC" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y3"
                    android:background="#E6EBEF" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sy_recyYk"
                    android:layout_width="match_parent"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y15"
                    android:background="#E6EBEF" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:gravity="center_vertical"
                    android:text="滚滚视频"
                    android:paddingLeft="5dp"
                    android:background="#FFFFFF"
                    android:textColor="#4370AC" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y3"
                    android:background="#E6EBEF" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sy_recyGg"
                    android:layout_width="match_parent"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y15"
                    android:background="#E6EBEF" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:gravity="center_vertical"
                    android:text="直播中国"
                    android:paddingLeft="5dp"
                    android:background="#FFFFFF"
                    android:textColor="#4370AC" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y3"
                    android:background="#E6EBEF" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sy_recyZg"
                    android:layout_width="match_parent"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
