<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1F539E"
    android:id="@+id/too">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/too_img1"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y150"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/too_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/too_img2"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y140"
                android:src="@mipmap/hudong_sign" />

            <ImageView
                android:id="@+id/too_img3"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y140"
                android:src="@mipmap/person_sign" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/too_fragment"></FrameLayout>
</LinearLayout>